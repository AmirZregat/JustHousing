<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addingsuperviso">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <EditText
            android:id="@+id/IdforNew"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/et_bg3"
            android:ems="10"
            android:hint="ادخل رقم المشرفة الجديد"
            android:inputType="phone"
            android:textAlignment="center" />


        <EditText
            android:id="@+id/namefornew"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg3"
            android:ems="10"
            android:hint="ادخل اسم المشرفة"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/salaryfornew"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg3"
            android:ems="10"
            android:hint="ادخل الراتب"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/phoneforenew"
            android:layout_width="match_parent"

            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg3"
            android:ems="10"
            android:hint="ادخل رقم الهاتف"
            android:inputType="phone"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/passwordfornew"
            android:layout_width="match_parent"

            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg3"
            android:ems="10"
            android:hint="ادخل الرقم السري "
            android:inputType="textPassword"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/confirmpass"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg3"
            android:ems="10"
            android:hint="تاكيد الرقم السري"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <Button
            android:id="@+id/addbtnfornew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_bg4"
            android:text="إضافة"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>