<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".guardianAuthorization">

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="توكيل السيد"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_tawkel"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:background="@drawable/et_bg3"
                android:ems="10"
                android:inputType="textPersonName" />

            <CheckBox
                android:id="@+id/checkBox_sleepDueHolidays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="36dp"
                android:text="مبيت ابنتي خارج السكن في عطلة نهاية الأسبوع والعطل الرسمية والأعياد عند الأشخاص المسموح بالمبيت عندهم"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkBox_oneDayTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="36dp"
                android:text="اشتراك ابنتي في الرحلات التي تنظمها الجامعة داخل الأردن لمدة يوم واحد"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkBox_moreThanOneDayTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="36dp"
                android:text="اشتراك ابنتي في الرحلات التي تنظمها الجامعة داخل الأردن لأكثر من يوم"
                android:textSize="18sp" />


            <CheckBox
                android:id="@+id/checkBox_sleepDueUniDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="36dp"
                android:text="مبيت ابنتي خارج السكن خلال أيام الدوام الرسمي"
                android:textSize="18sp" />


        </LinearLayout>

        <Button
            android:id="@+id/button28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_bg2"
            android:onClick="GuardianAuthDone"
            android:text="تم"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>