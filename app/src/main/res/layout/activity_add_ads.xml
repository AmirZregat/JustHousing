<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addAds">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/adstext"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:inputType="textMultiLine"
            android:background="@drawable/et_bg3"/>

        <Button
            android:id="@+id/addnew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_bg4"
            android:textColor="@color/white"
            android:text="إضافة إعلان جديد بدون حذف"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>


        <Button
            android:id="@+id/deletandadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg4"
            android:textColor="@color/white"
            android:text="حذف جميع الإعلانات وإضافة جديد"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>


        <Button
            android:id="@+id/deleteallwithoutadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg4"
            android:textColor="@color/white"
            android:text="حذف الإعلانات السابقة "
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
</ScrollView>