<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="45" android:endColor="#4B63D6" android:startColor="#4B63D6"></gradient>
            <corners android:radius="70dp"></corners>
            <padding android:bottom="5pt" android:left="6pt" android:right="6pt" android:top="5pt"></padding>
            <stroke android:width="3dp" android:color="#00bfd5"></stroke>
        </shape>
    </item>
    <item>

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="45" android:endColor="#4B63D6" android:startColor="#00B7FF"></gradient>
            <corners android:radius="70dp"></corners>
            <padding android:bottom="5pt" android:left="6pt" android:right="6pt" android:top="5pt"></padding>
            <stroke android:width="1dp" android:color="#00bfd5"></stroke>
        </shape>

    </item>


</selector>